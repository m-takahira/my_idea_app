<p id="notice"><%= notice %></p>

<p>
  <strong><FONT color="red">Name:</strong></FONT>
  <%= @idea.name %>
</p>

<p>
  <strong><FONT color="red">Description:</FONT></strong>
  <%= @idea.description %>
</p>

<p>
  <strong><FONT color="blue">Picture:</FONT></strong>
  <%= image_tag(@idea.picture_url, width: 600) if @idea.picture.present? %>
</p>

<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div>
    <strong><FONT color="yellow"><%= comment.user_name %></FONT></strong>
    <br />
    <p><%= comment.body %></p>
    <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: '削除してもよろしいですか？' } %></p>
  </div>
<% end %>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_idea_path(@idea) %> |
<%= link_to 'Back', ideas_path %>
